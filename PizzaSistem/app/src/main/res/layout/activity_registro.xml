        />
    />
    <EditText
        android:id="@+id/Edit_correoreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        />
    />
   <Button
       android:id="@+id/Boton_registrar"
